#!/usr/bin/env bash

if [ -z "$1" ]; then
  echo "Usage: $0 <file_path>"
  exit 1
fi

if [ ! -f "$1" ]; then
  echo "Error: File not found: $1"
  exit 1
fi

# (
#   echo '```'
#   cat "$1"
#   echo '```'
# ) | xclip -selection clipboard

(
  echo '```'
  cat "$1"
  echo '```'
) | wl-copy

echo "Content of '$1' copied to clipboard."

exit 0
