# Brightnes control
XF86MonBrightnessDown
	brightness_down
	# sh -c "/run/current-system/sw/bin/light -U 10"
XF86MonBrightnessUp
	brightness_up
	# sh -c "/run/current-system/sw/bin/light -A 10"
XF86AudioLowerVolume
	volume_down
XF86AudioRaiseVolume
	volume_up
XF86AudioMute
	volume_mute_toggle
# search button opens rofi to connect bt device
XF86Search
	rofi_bluetooth.sh
XF86LaunchA
	rofi_bluetooth_info.sh
XF86Explorer
	sus
# Lockscreen
super + l
	betterlockscreen -l
# toggle touchpad
super + m
	toggle_touchpad
